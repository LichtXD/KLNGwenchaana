import java.util.Scanner;

public class SquareSemiCircle{
	public static void main(String[] args) {
	Scanner scan = new Scanner(System.in);
    double PI = 3.14d;
    double a1,a2,a3,a4,s1,sc;
	System.out.print("Enter The Side of the square: ");
	int Side = scan.nextInt();
	a2 = 180; a3 = 360; a4 = a2/a3;
	s1 = Side / 2.0;
	sc = Side * Side;
	a1 = (PI * s1 * s1) * a4 + sc;
	
	System.out.printf("The Total Area of the Square and Semi-Circle combined is: %.02f",a1 );
	}
}
